    "outDir": "./build",
    "outFile": "./build/index.js",
    "target": "es5",
    "module": "amd",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "jsx": "react",
    "lib": [ "es2015", "dom" ]
  },
